{
  "name": "@soujvnunes/themizer",
  "version": "1.0.5",
  "license": "ISC",
  "description": "Generate CSS custom properties based on a given theme with tokens and aliases serving as a reference.",
  "author": "soujvnunes <soujvnunes@gmail.com> (https://soujvnunes.github.io)",
  "homepage": "https://github.com/soujvnunes/themizer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soujvnunes/themizer.git"
  },
  "bugs": {
    "url": "https://github.com/soujvnunes/themizer/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "keywords": [
    "Design System",
    "Design Tokens",
    "Responsive Web Design",
    "CSS Custom Properties",
    "TypeScript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">= 16.0.0",
    "pnpm": ">= 8.0.0"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "test": "jest",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-scope": "^7.2.2",
    "eslint-visitor-keys": "^3.4.3",
    "expect-puppeteer": "^10.1.4",
    "jest": "^29.7.0",
    "jest-environment-puppeteer": "^10.1.4",
    "jest-puppeteer": "^10.1.4",
    "prettier": "^2.8.8",
    "prettier-linter-helpers": "^1.0.0",
    "puppeteer": "^23.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  }
}
