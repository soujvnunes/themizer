    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
