{
  "type": "module",
  "license": "ISC",
  "version": "2.0.1",
  "packageManager": "pnpm@10.8.1",
  "name": "themizer",
  "description": "Generate CSS custom properties based on a given theme with tokens and aliases serving as a reference.",
  "author": "soujvnunes <soujvnunes@gmail.com> (https://soujvnunes.github.io)",
  "homepage": "https://github.com/soujvnunes/themizer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soujvnunes/themizer.git"
  },
  "bugs": {
    "url": "https://github.com/soujvnunes/themizer/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "Design System",
    "Design Tokens",
    "Responsive Web Design",
    "CSS Custom Properties",
    "TypeScript"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "themizer": "./dist/cli/bin.cjs"
  },
  "engines": {
    "node": ">= 18.0.0",
    "pnpm": ">= 10.0.0"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "test": "jest",
    "changeset:patch": "pnpm changeset && pnpm version patch",
    "changeset:minor": "pnpm changeset && pnpm version minor",
    "changeset:major": "pnpm changeset && pnpm version major"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/commander": "^2.12.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.2",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-scope": "^7.2.2",
    "eslint-visitor-keys": "^3.4.3",
    "expect-puppeteer": "^10.1.4",
    "jest": "^29.7.0",
    "jest-environment-puppeteer": "^10.1.4",
    "jest-puppeteer": "^10.1.4",
    "prettier": "^2.8.8",
    "prettier-linter-helpers": "^1.0.0",
    "puppeteer": "^23.11.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "prompts": "^2.4.2"
  },
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0"
    }
  }
}
